<h1>URL Shortener</h1>
<form action="/short-url" method="POST">
    <label for="fullUrl">URL</label>
    <input type="url" name="fullUrl", id="fullUrl">
    <button type="submit">Shrink</button>
</form>
<table>
    <thead>
        <tr>
            <th>Full URL</th>
            <th>Short URL</th>
            <th>Clicks</th>
        </tr>
    </thead>
    <tbody>
        {{#each data}}
        <tr>
            <td><a href="{{this.fullUrl}}">{{this.fullUrl}}</a></td>
            <td><a href="/{{this.shortUrl}}">{{this.shortUrl}}</a></td>
            <td>{{this.clicks}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>
